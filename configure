sed -i.tmp '/ GetSpecXaxisFromShMem/,/}/d' ./src/RcppExports.cpp
sed -i.tmp '/ GetStickSpectrumFromShMem/,/}/d' ./src/RcppExports.cpp
sed -i.tmp '/ GetSumSpectrumFromShMem/,/}/d' ./src/RcppExports.cpp
